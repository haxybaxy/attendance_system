---
export interface Props {
  name: string;
  body: string;
  active: boolean;
}

const { name, active } = Astro.props;
---
<!-- checks if there is a class going on right now, passed on as a prop in index.astro -->
{active ? 
    <a href="" class="w-[80%] my-2">
      <div class="h-fit w-[100%] bg-slate-100 shadow-xl rounded-xl p-7">
        <h2 class="text-center"> {name} </h2>
        <p class="text-center">Click to scan or input code</p>
      </div>
    </a>
    
    :   

    <a>
      <div class="h-fit w-[80%] bg-slate-100 shadow-xl rounded-xl p-7">
        <h2 class="text-center">No Classes at this Time</h2>
        <p class="text-center">Check your Upcoming Classes Below</p>
      </div>
    </a>
}
